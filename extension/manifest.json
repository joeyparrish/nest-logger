{
  "manifest_version": 3,
  "name": "Nest Data Logger",
  "version": "1.0",
  "description": "Intercepts Nest API responses and logs sensor temperature history.",

  "permissions": ["storage", "unlimitedStorage", "alarms", "tabs"],
  "host_permissions": ["https://home.nest.com/*"],

  "content_scripts": [
    {
      "matches": ["https://home.nest.com/*"],
      "js": ["interceptor.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://home.nest.com/*"],
      "js": ["relay.js"],
      "run_at": "document_start"
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Nest Data Logger"
  }
}
